{
  "manifest_version": 2,
  "minimum_chrome_version": "58",
  "name": "DetectMiner",
  "description": "Tells you if the current page is using your computer to mine cryptocurrencies",
  "version": "1.0",
  "icons": {
    "48": "assets/mainLogo_48.png",
    "128": "assets/mainLogo_128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
   "default_icon": "assets/basicLogo_48.png",
   "default_popup": "popup.html"
  },
  "web_accessible_resources" : ["inspector.js"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.js"],
      "all_frames": true
    }
  ],
  "permissions": [
   "activeTab",
   "tabs", "<all_urls>",
   "webNavigation",
   "webRequest",
   "storage"
   ]
}
